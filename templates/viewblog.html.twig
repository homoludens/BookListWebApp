{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 align-center">
            <h1>{{ blog.title }}</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div>{{ blog.title }}</div>
            <div>{{ blog.shortDescription }}</div>
            <div>{{ blog.body }}</div>
            <div>{{ blog.image }}</div>
            <div><img width="200px" src="/{{ blog.image }}"/></div>


        </div>
    </div>

    <div class="row">
        <div class="col-lg-8  align-center">
            <a href="{{ path('app_main_createblog') }}" class="btn btn-primary">Create blog</a>
        </div>
    </div>


{% endblock %}